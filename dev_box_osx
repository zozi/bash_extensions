alias zozi="cd $DEV_DIR/zozi"
alias zz="cd $DEV_DIR/zozi"

export PATH="~/bin:/usr/local/mysql/bin:/opt/local/bin:/usr/sbin:$PATH"
export MANPATH=$MANPATH:/opt/local/man
export EDITOR=`which mate`

# open Textmate with only the dirs we normally want to work with
alias mater='mate `ls -Fa | grep -v .git/ | grep -v .DS_Store | grep -v _site/ | grep -v doc/ | grep -v log/ | grep -v tmp/ | grep -v vendor/ | grep -v "\./"` public/javascripts public/stylesheets'
alias gdm='git diff HEAD | mate'

